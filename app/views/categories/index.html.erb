<div class="row justify-content-center">

  <div class="my-3">
    <%= link_to "Add a New Category", "/categories/new", class: 'btn btn-success' %>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% Category.all.order("name").each do |category| %>
        <tr>
          <td><%=category.name%> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
