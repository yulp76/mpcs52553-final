<div class="row justify-content-center">

  <div class="my-3">
    <%= link_to "Add a New Destination", "/destinations/new", class: 'btn btn-success' %>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Destination</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% Destination.all.order("name").each do |destination| %>
        <tr>
          <td><%= link_to destination.name, "/destinations/#{destination.id}" %> </td>
          <td><%= link_to "Edit", "/destinations/#{destination.id}/edit" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
