<div class="row justify-content-center">
  <div class="col-lg-9 my-3 bordered">

    <div class="row justify-content-center">
      <div class="col-lg-7">
        <div style="height:350px; width:550px; overflow:auto;">
          <%= destination.introduction %>
        </div>
      </div>

      <div class="col-lg-5">
        <div class="card" style="width:400px height:400px">
          <div class="card-body text-right">
            <h1 style="font-weight: bold;"> <%= destination.name %></h1>
          </div>
          <%= image_tag(destination.cover_url, class: "card-img-bottom") %>
        </div>
      </div>
    </div>
  </div>
</div>
