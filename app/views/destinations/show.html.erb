<% destination = Destination.find_by(id: params["id"]) %>
<% types = Type.order('name').all %>
<% selected=params[:type] %>
<% if selected %>
  <% attractions = destination.attractions.where(type_id: selected) %>
<% else %>
  <% attractions = destination.attractions %>
<% end %>

<div class="row">
  <div class="col-lg-6">
    <div class="text-center">
      <h2> <%= destination.name %> </h2>
    </div>
    <p>
      <%= destination.introduction %>
    </p>
  </div>

  <div class="col-lg-6">
    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="http://placehold.it/900x600" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="http://placehold.it/900x600" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="http://placehold.it/900x600" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-3">
    <h2>Select Types</h2>

    <%= form_tag "/destinations/#{params["id"]}", method: "get" do %>
      <% types.each do |type| %>
        <% if selected && selected.include?(type.id.to_s) %>
          <input type="checkbox" name="type[]" value="<%= type.id %>" checked> <%= type.name %> <br>
        <% else %>
          <input type="checkbox" name="type[]" value="<%= type.id %>"> <%= type.name %> <br>
        <% end %>
      <% end %>
        <button class="btn btn-primary">Filter</button>
    <% end %>
  </div>

  <div class="col-lg-9">
    <div class="row">
        <% attractions.each do |attraction| %>
        <div class="col-lg-4">
          <div class="card h-100">
            <%= image_tag(attraction.image_url, class: "img-fluid") %>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to attraction.name, "/attractions/#{attraction.id}" %>
              </h4>
            </div>
            <div class="card-footer">
              <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
